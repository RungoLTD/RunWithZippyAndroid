<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_340sdp"
                android:background="@drawable/bg_login" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:src="@drawable/ic_logo_title" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivLogo"
                android:layout_marginStart="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_38sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                app:cardCornerRadius="@dimen/_16sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tvSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center_horizontal"
                        android:padding="6dp"
                        android:text="@string/login_title"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvSignUp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:background="@android:color/white"
                        android:hint="@string/input_login"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorRed">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="0dp"
                            android:textSize="@dimen/_12ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tilLogin"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/white"
                        android:hint="@string/input_password"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorRed">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:paddingLeft="0dp"
                            android:textSize="@dimen/_12ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvForgetPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tilPassword"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/forget_password"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvForgetPassword"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_26sdp"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="@string/login"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/btnLogin"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:id="@+id/layoutOtherLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnGoogle"
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/actionBarItemBackground"
                            android:src="@drawable/ic_google"
                            android:textColor="@android:color/white" />

                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/login_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_after_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:visibility="gone"
            android:padding="@dimen/_15sdp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/logo_layout"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_52sdp"
                        android:background="@drawable/corners_splash_logo_layout"
                        android:padding="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/ivLogo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bg_splash" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:text="Давай"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_24sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_18sdp"
                        android:text="знакомиться!"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_24sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Имя:"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_18sdp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorRed">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_input"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="@dimen/_12ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как тебя хвалить?"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(к примеру: Ты молодец!)"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTrophyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorRed">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTrophyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_input"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="@dimen/_12ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как тебя ругать?"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(к примеру: Ты не молодец!)"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilRebukeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorRed">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRebukeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_input"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="0dp"
                            android:textSize="@dimen/_12ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Рост"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_18sdp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorRed">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_input"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/_12ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вес"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_18sdp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorRed">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_input"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/_12ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnEndFirstLogin"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/colorWhite"
                        android:text="@string/next"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

</layout>